select first_name,department_name -- inner join 
from employees, departments
where employees.department_id= departments.department_id;


select departments.department_name, employees.salary -- left join  
from departments left join employees 
on departments.department_id=employees.department_id;
 
select departments.department_name,employees.phone_number -- right join 
from employees right join departments
on employees.manager_id=departments.manager_id; 
 
 
select departments.department_name,employees.phone_number -- cross join 
from employees cross join departments
on employees.manager_id=departments.manager_id; 
